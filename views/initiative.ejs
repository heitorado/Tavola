<!DOCTYPE html>
<html>
    <head>
	<title><%= title %> - Initiative Manager</title>

	<!-- Jquery and socket.io -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

	<!-- Optional theme -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
	
	<!-- Icons -->
	<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
	<link rel="stylesheet" href="stylesheets/Rpg-Awesome-master/css/rpg-awesome.css">

	<!-- Font -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet"> 
	      
	<script src="javascripts/dice.js"></script>
	
	<link rel="stylesheet" type="text/css" href="stylesheets/initiative.css">
	
    </head>
    <body>

	<div class="sidenav">

	    <a href="/"><%= title %></a><br>
	    <hr/>
	    <a id="add" href="#">Add</a>
	    <a id="restart" href="#">Restart</a>
	    <hr/>	    
	    <a id="new" href="#">Sort</a>
	    <a id="next" href="#">Next</a>
	    <a id="previous" href="#">Previous</a>
	    <hr/>
	    <a id="undo" href="#">Undo</a>
	    <a id="save" href="#">Save</a>
	    <a id="return" href="#">Return</a>
	    <a id="mechanics" href="#">Mechanics</a>
	</div>

	<div id="main">

	    <div id="current-box" class="list-group">
		
	    </div>
	    
	    <!-- Initiative order -->
	    <div id="ini-box">
		<ul id ="ini-list" class="list-group">
		</ul>
	    </div>
	    
	    <!-- Add new char box -->
	    <div id="add-box" class="modal">

		<!-- Modal content -->
		<div class="modal-content">

		    <div class="form-group form-inline">
			<span id="close-modal" class="close">&times;</span>
			Name: <input id="char-name" type="text" class="form-control" placeholder="Name of the character">
		    </div>

		    <div class="form-group mb-2 mx-sm-3 form-inline">
			Mod: <input id="ini-mod" type="number" class="form-control" value="0">
			<button id="dice" type="submit" class="btn btn-default">Dice</button><input id="ini-dice" type="number" class="form-control" value="0">
		    </div>

		    <div class="form-group mb-2 mx-sm-3 form-inline">
			<form id="creature-type" class="form-group">
			    <label class="radio-inline">
				<input type="radio" name="creature-type-check" value="player" checked>Player
			    </label>
			    <label class="radio-inline">
				<input type="radio" name="creature-type-check" value="monster">Monster
			    </label>
			    <label class="radio-inline">
				<input type="radio" name="creature-type-check" value="npc">NPC
			    </label>
			</form>
		    </div>

		    <div class="form-group form-inline">
			<button id="submit-char" type="submit" class="btn btn-default">Submit</button>
		    </div>
		    
		</div>
	    </div>
	    
	</div> 

	<script src="javascripts/systems.js"></script>
	<script src="javascripts/initiative.js"></script>
	
    </body>
</html>
